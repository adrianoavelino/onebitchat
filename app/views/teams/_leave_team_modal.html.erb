<div id="leave_team_modal" class="modal">
  <div class="modal-content">
    <div class="row">
      <%= form_tag("users/0", :method => :delete, class: "col s12 exit_team_form") do %>
        <div class="row">
          <div class="col s12">
            <h4>Exit from Team</h4>
            <p>Do you want exit from Team <strong><%= @team? @team.slug : '' %></strong>?</p>
          </div>
          <div class="input-field col s12">
            <input type="hidden" name="user_leave_team_id" id="user_leave_team_id" value="<%= @team %>">
            <%= submit_tag("Remove", class: "btn red right") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
